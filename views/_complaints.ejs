		            </thead>
		  <tbody>
				<% var ord_status; %>
				<% var options=[]; %>
                <% console.log(orders); %>
				<% if (orders) { %>
					<% orders.forEach(function(order){ %>

						<% switch (userType) {
								case 'HOD' : %>

								<% switch (order.STATUS) {
									case 'P' : %>
												<%  ord_status='Pending' %>
