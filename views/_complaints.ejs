								<%  ord_status='Rejected' %>
								<%  options = [ ]; %>
									<% break;
							} %>

							 <% break;

							 case 'A' : %>

							 <% switch (order.STATUS) {
								 case 'P' : %>
											 <%  ord_status='Pending' %>
											 <%  options = [ "A", "R", "I" ]; %>
												 <% break;

								 case 'A' : %>
											<% ord_status='Approved' %>
