												 <% break;

								 case 'I' : %>
							 <%  ord_status='In-Progress' %>
							 <%  options = [  ]; %>
								 <% break;

								 case 'S' : %>
							 <%  ord_status='Shipped' %>
							 <%  options = [ "D" ]; %>
								 <% break;

								 case 'D' : %>
							 <%  ord_status='Delivered' %>
							 <%  options = [ ]; %>
								 <% break;

								 case 'R' : %>
							 <%  ord_status='Rejected' %>
							 <%  options = [ ]; %>
								 <% break;
						 } %>
							<% break;

							case 'DT' : %>

							<% switch (order.STATUS) {
								case 'P' : %>
											<%  ord_status='Pending' %>
											<%  options = [  ]; %>
												<% break;

								case 'A' : %>
										 <% ord_status='Approved' %>
										 <%  options = [ ]; %>
												<% break;

								case 'I' : %>
							<%  ord_status='In-Progress' %>
							<%  options = [  ]; %>
								<% break;

								case 'S' : %>
							<%  ord_status='Shipped' %>
							<%  options = [ "D" ]; %>
								<% break;

