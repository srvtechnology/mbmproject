<!-- local bootstrap -->
<script src="/javascripts/webfont/webfont.min.js"></script>
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="/stylesheets/bootstrap.css">
<link rel="stylesheet" href="/stylesheets/atlantis.min.css">
<link href="/javascripts/jquery-ui/jquery-ui.css" rel="stylesheet"/>
<link href="/stylesheets/bootstrap-responsive.css" rel="stylesheet">
<!-- local style css -->
<link rel="stylesheet" href="/stylesheets/navbar.css">
<link rel="stylesheet" href="/stylesheets/index.css">

</head>
<body>
<div class="wrapper d-flex align-items-stretch">
<%- include("./partials/_menu.ejs",{userId:userId,userType:userType,username:username,userImg:userImg}) %>
<div class="order section">
    <div class="container">
        <div class="row">
               
                <% if(userType == 'A') { %>
                    <div class="card" style="width: 50rem; margin-left: 10rem; background-color: #b794f6; padding: 2rem;">
                        <img class="card-img-top" src="/images/loudspeaker.png"  style="width: 10rem; height: 10rem;margin: auto;">
                        <div class="card-body">
                          <h5 class="card-title" style="color: white;">Upload Discount and Ads</h5>
                        </div>
                        <div class="form-group col-md-6" style="margin: auto;">
                           
                          </div>
                        <div class="card-body" style="color: white; margin: auto;">
                            <form id="discountform" method="POST" action="/upload_discount_ad" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="discountadcategory">Select Category</label>
                                    <select id="discountadcategory" name="discountadcategory" class="form-control" required="required">
                                      <option selected>Choose...</option>
                                      <option value="Discount">Discount</option>
                                      <option value="Ad">Ad</option>
                                    </select>
                                  <label for="exampleFormControlFile1" >Upload File</label>
                                  <input type="file" name="discountadfile" class="form-control-file" accept=".pdf,.jpg,.png">
                                </div>
                                <button class="btn btn-primary"  style="border-radius: .5rem;" type="submit">Submit</button>
                              </form>
                        </div>
                      </div>
                      <% if(banners) { %>
                        <% banners.forEach(function(banner){ %>
                            <div class="card" style="width: 20rem; height: 25rem; margin: auto;">
                                <iframe src="/discountads/<%=banner.filename%>" style="width: 18rem; height: 20rem;" class="card-img-top" alt="..."></iframe>
                                <div class="card-body">
                                    <form id="deletediscount" method="POST" action="/delete_discount_ads" enctype="multipart/form-data">
                                        <input type="hidden" value="<%=banner.id%>" name="banner_id"/>
                                        <button  type="submit" class="btn btn-danger">Delete</a>
                                    </form>
                                  
                                </div>
                              </div>
                           
                            <!-- <li class="list-group-item"></li> -->
                        <% }); %>
                    <%} %>
                <%} %>

                <% if(userType == 'DL' || userType == 'DT' || userType == 'SE') { %>
                    <% if(banners) { %>
                        <% banners.forEach(function(banner){ %>
                            <div class="card" style="width: 30rem; height: 35rem; margin: auto;">
                                <iframe src="/discountads/<%=banner.filename%>" style="width: 30rem; height: 30rem;" class="card-img-top" alt="..."></iframe>
                              </div>
                           
                            <!-- <li class="list-group-item"></li> -->
                        <% }); %>
                    <%} %>
                <% } %>

                
           
          </div>
        </div>
      </div>
</div>
</div>

<script src="/javascripts/fontawwesome.js"></script>
<!-- jQuery -->
<script src="/javascripts/jquery.js"></script>
